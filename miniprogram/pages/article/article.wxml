<!-- 文章列表 -->
<view class='article_list_container'>
  <!-- 广告咨询 -->
  <view class='swiper_container'>
    <swiper style='height: 460rpx' indicator-dots autoplay circular indicator-active-color='#fff'>
      <swiper-item>
        <image style='width: 100%; height: 460rpx;' src='https://yougexiaoluo.github.io/readerAndMovie/images/iqiyi.png' mode='aspectFill' />
      </swiper-item>
      <swiper-item>
        <image style='width: 100%; height: 460rpx;' src='https://yougexiaoluo.github.io/readerAndMovie/images/vr.png' mode='aspectFill' />
      </swiper-item>
      <swiper-item>
        <image style='width: 100%; height: 460rpx;' src='https://yougexiaoluo.github.io/readerAndMovie/images/wx.png' mode='aspectFill' />
      </swiper-item>
    </swiper>
  </view>
  <!-- 文章列表 -->
  <view class='article_list'>
    <block wx:for='{{postsList}}' wx:key='{{index}}'>
      <articleItem data="{{item}}" />
    </block>
  </view>
</view>